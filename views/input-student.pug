doctype html
html(lang='en')

  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='')
    meta(name='author', content='')
    // script(defer='', src='https://use.fontawesome.com/releases/v5.0.8/js/all.js')

    title Student Database

    include includes/css/core.pug

    // Page level plugin CSS
    link(href='sb-admin/vendor/datatables/dataTables.bootstrap4.css', rel='stylesheet')

    include includes/css/custom.pug

  body#page-top.fixed-nav.sticky-footer.bg-dark
    include includes/navbar.pug
    .content-wrapper
      .container-fluid
        // Breadcrumbs
        ol.breadcrumb
          li.breadcrumb-item
            a(href='/') Dashboard
          li.breadcrumb-item
            a(href='/students') Student List
          li.breadcrumb-item.active Input New Student
        // Example DataTables Card
        .card.mb-3
          .card-header
            i.fa.fa-check-square-o
            |  Input New Student
          .card-body
            form(action='/input-student', method='POST', onsubmit='validasi()')
              .row.form-group
                .col-4
                  label(for='admission_date') Admission Date:
                .col-6
                  input.form-control(type='date', name='admission_date')
              .row.form-group
                .col-4
                  label(for='name') Name:
                .col-6
                  input.form-control(type='text', name='name', placeholder='Input Name')
              .row.form-group
                .col-4
                  label(for='address') Address:
                .col-6
                  input.form-control(type='text', name='address', placeholder='Input Address')
              .row.form-group
                .col-4
                  label(for='date_of_birth') Date of Birth:
                .col-6
                  input.form-control(type='date', name='date_of_birth')
              .row.form-group
                .col-4
                  label(for='gender') Gender:
                .col-6
                  .radio
                    label
                      input(type='radio', name='gender', value='F')
                      |  Female
                  .radio
                    label
                      input(type='radio', name='gender', value='M')
                      |  Male
              .row.form-group
                .col-4
                  label(for='major') Major:
                .col-6
                  input.form-control(type='text', name='major', placeholder='Input Major')
              .row.form-group
                .col-4
                  label(for='student_email') Student Email:
                .col-6
                  input.form-control(type='email', name='student_email', placeholder='Input Student Email')
              input.btn.btn-primary(type='submit', value='Submit')
      // /.container-fluid
      // /.content-wrapper

      include includes/footer.pug

      include includes/scroll-to-top.pug

      //include includes/modals/logout.pug

      include includes/js/core.pug

      // Page level plugin JavaScript
      script(src='sb-admin/vendor/datatables/jquery.dataTables.js')
      script(src='sb-admin/vendor/datatables/dataTables.bootstrap4.js')

      include includes/js/custom.pug

      // Custom scripts for this page
      script(src='sb-admin/js/sb-admin-datatables.min.js')
          
